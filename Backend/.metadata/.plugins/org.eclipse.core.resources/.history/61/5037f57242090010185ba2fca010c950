package klu.model;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.mail.SimpleMailMessage;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.stereotype.Service;

@Service
public class EmailManager {
	@Autowired
	JavaMailSender JMS;
	public String sendEmail(String toEmail,String subject,String message) {
		try {
			SimpleMailMessage mailMessage=new SimpleMailMessage();
			mailMessage.setFrom("Shaiksameer3909sam@gmail.com");
			mailMessage.setFrom(toEmail);
			mailMessage.setFrom(subject);
			mailMessage.setFrom(message);
			JMS.send(mailMessage);
			
			return "200::password send to the registered Email";
		}catch(Exception e) {
			return "401::"+e.getMessage();
		}
		
	
	}
}
